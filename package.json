{
  "name": "cap-basic",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^1",
    "@sap-cloud-sdk/http-client": "^3.21.0",
    "@sap-cloud-sdk/resilience": "^3.21.0",
    "@sap/cds": "^8",
    "@sap/hana-client": "^2.22.27",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.6",
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8"
  },
  "scripts": {
    "start": "cds-serve"
  },
  "cds": {
    "requires": {
      "[production]": {
        "auth": "xsuaa",
        "connectivity": true,
        "destinations": true,
        "html5-repo": true
      },
      "Business.Partners": {
        "kind": "rest",
        "model": "srv/external/BusinessPartner_APIs",
        "credentials": {
          "destination": "apihub"
        }
      },
      "northwind": {
        "kind": "odata",
        "model": "srv/external/northwind",
        "credentials": {
          "destination": "northwind"
        }
      },
      "[hybrid]": {
        "messaging": {
          "kind": "file-based-messaging",
          "file": "./msg-box"
        }
      }
    },
    "sql": {
      "native_hana_associations": false
    },
    "fiori": {
      "preview": true
    },
    "server": {
      "index": true
    }
  }
}
